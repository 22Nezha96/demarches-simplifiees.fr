#custom-mails
  .wrapper
    %h1 E-mails personnalisables
    %table.table
      %tr
        %th{ colspan: 2 }
          Type d'email
      - @mails.each do |mail|
        %tr
          %td
            = mail.class.const_get(:DISPLAYED_NAME)
          %td.text-right
            = link_to "Personnaliser l'e-mail", edit_admin_procedure_mail_template_path(@procedure, mail.class.slug)
